<ul>
    {{#each games}}
        <li>
            <fieldset>
                <legend>
                    <a class="link" href="/games/{{id}}"><b>{{title}}</b> <i>({{Year releaseDate}})</i></a>
                </legend>
                <a href="/games/{{id}}">
                    {{#if filename}}
                        <img src="/uploads/{{filename}}" class="gameImage" onerror="this.src='/Images/gameImageDefault.jpeg'">
                    {{else}}
                        <img src="/Images/gameImageDefault.jpeg" class="gameImage">
                    {{/if}}
                </a>
                {{> editButtons}}
            </fieldset>
        </li>
    {{/each}}
</ul>

<script src="/scripts/buttons.js" type="text/javascript">
</script>